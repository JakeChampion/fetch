  Date    :12/22/2017
  Program :To check a number as odd or even */
  #include<stdio.h>
  #include<conio.h>
  void main()
  {
      int a;
      printf("Enter the number\n");
      scanf("%d",&a);
      if(a % 2==0)
      printf("The number is even.");
      else
      printf("The number is odd.");
      getch();
  }
